<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="project.example.com.report_project.NoticeSpecActivity">

    <TextView
        android:id="@+id/noticeSpec_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="타이틀"
        android:textSize="30dp"
        android:layout_margin="10dp"
        />

    <TextView
        android:id="@+id/noticeSpec_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="날짜"
        android:textSize="15dp"
        android:layout_below="@+id/noticeSpec_title"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        />

    <ScrollView
        android:id="@+id/sView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/noticeSpec_date"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/noticeSpec_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="공지사항 내용내용내용내용내용내용"/>

    </ScrollView>

</RelativeLayout>
