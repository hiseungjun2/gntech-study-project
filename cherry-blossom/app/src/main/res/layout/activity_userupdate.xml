<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="project.example.com.report_project.UserupdateActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/mainLayout"
        android:gravity="center">

        <ImageView
            android:id="@+id/userImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/ic_account_circle_black_24dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="이메일"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/joinId"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="비밀번호"
                android:gravity="center"/>
            <EditText
                android:id="@+id/joinPw"
                android:inputType="textPassword"
                android:layout_width="250dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp">
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="이름"
                android:gravity="center"/>
            <EditText
                android:id="@+id/joinName"
                android:layout_width="250dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp">
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="생년월일"/>
            <TextView
                android:id="@+id/joinBirth"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="날짜 변경을 위해 눌러주세요"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp">
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="직업"
                android:gravity="center"/>
            <TextView
                android:id="@+id/joinProf"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="직업 변경을 위해 눌러주세요"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp">
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="지역"
                android:gravity="center"/>
            <TextView
                android:id="@+id/joinLocal1"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:text="도"/>
            <TextView
                android:id="@+id/joinLocal2"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:text="시/군/구"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="50dp">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="목적"
                android:gravity="center"/>

            <TextView
                android:id="@+id/joinPurp"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="목적을 골라주세요"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>
